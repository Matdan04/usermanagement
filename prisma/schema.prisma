generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(cuid())
  name        String
  email       String   @unique
  phoneNumber String?
  role        String
  active      Boolean  @default(true)
  avatar      String?
  bio         String?
  createdAt   DateTime @default(now())
}

